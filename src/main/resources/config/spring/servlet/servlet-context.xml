<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/mvc
           http://www.springframework.org/schema/mvc/spring-mvc.xsd
           http://www.springframework.org/schema/aop 
           http://www.springframework.org/schema/aop/spring-aop.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Spring MVC -->
    <mvc:annotation-driven/>

	<!-- Controller Annotation Scan -->
    <context:component-scan base-package="com.spring">
		<context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
		<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Service"/>
		<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Repository"/>
	</context:component-scan>
	
	<!-- aop -->
	<bean id="loggingController" class="com.spring.common.util.aop.LoggingController" />
	
	<!-- 웹 요청 시 aop  -->
	<aop:config>
		<!-- aspect : 어떤 공통 기능을 적용할지 정의 -->
		<!-- pointcut : 어디에 적용할지 정의 -->
		<!-- expression : com.spring 모든 하위 폴더의 controller 클래스 내부의 모든 메서드 에 적용 -->
		<aop:aspect ref="loggingController">
			<aop:pointcut expression="execution(* com.spring..*Controller.*(..))"  id="allControlPointCut"/>
			<!-- advice : 메서드 전/후/예외 등 시점에 실행될 부가 로직 코드 -->
			<!-- advice 핵심 5가지 종류 -->
			<!-- before : 대상 메서드 실행 직전
			   - after : 대상 메서드 실행 후
			   - afterReturning : 대상 메서드가 정상 리턴했을 때
			   - afterThrowing : 대상 메서드에서 예외 발생 시
			   - around : 대상 메서드 실행 전/후 전체 감싸기 -->
			<aop:around method="printMethodName" pointcut-ref="allControlPointCut"/>
		</aop:aspect>
	</aop:config>

    <!-- View Resolver 설정 -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <!-- File Resolver 설정 -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="maxUploadSize" value="5242880"/>  <!-- 5MB 이하는 업로드 시 디스크에 저장 / 이상은 업로드 불가 -->
        <property name="maxInMemorySize" value="1048576"/>  <!-- 1MB 이하는 업로드 시 메모리에 저장 -->
        <property name="defaultEncoding" value="utf-8" />
    </bean>
    
    <!-- 정적 리소스 매핑 (CSS, JS, IMAGE) -->
    <!-- boot에서는 자동 처리 -->
<!--     <mvc:resources mapping="/resources/**" location="/resources/"/> -->

	<!-- interceptor -->
	<!-- 웹 요청 인터셉터 -->
	<mvc:interceptors>
	    <mvc:interceptor>
	    	<!-- 인터셉터를 적용할 경로 -->
	        <mvc:mapping path="/**"/>
	        
	        <!-- 인터셉터를 제외할 경로 -->
	        <mvc:exclude-mapping path="/loginPage"/>
	        <mvc:exclude-mapping path="/login" />
	        <bean class="com.spring.common.util.interceptor.AuthenticationInterceptor"/>
	    </mvc:interceptor>
	</mvc:interceptors>
</beans>
